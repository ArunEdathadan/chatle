{
	/* Click to learn more about project.json  http://go.microsoft.com/fwlink/?LinkID=517074 */
	"webroot": "wwwroot",
	"version": "1.0.0-*",
	"authors": [ "Olivier Lefebvre" ],
	"description": "chatle is simple chat website using AST.NET 5 technologies",
	"compilationOptions": {
		"warningsAsErrors": true
	},
	"configurations": {
		"Debug": {
			"compilationOptions": {
				"define": [ "DEBUG", "TRACE" ]
			}
		},
		"Release": {
			"compilationOptions": {
				"define": [ "RELEASE", "TRACE" ],
				"optimize": true
			}
		}
	},
	"dependencies": {
		"Kestrel": "1.0.0-beta3",
		"ChatLe.FastCGI": "",
		"ChatLe.HttpUtility": "",
		"ChatLe.Repository.Identity": "",
		"ChatLe.Logging": "",
		"EntityFramework.Core": "7.0.0-beta3",
		"EntityFramework.InMemory": "7.0.0-beta3",
		"EntityFramework.Redis": "",
		//"EntityFramework.SQLite": "7.0.0-beta1",
		"EntityFramework.SqlServer": "7.0.0-beta3",
		"Microsoft.AspNet.Mvc": "6.0.0-beta3",
		//"Microsoft.AspNet.Mvc.WebApiCompatShim": "6.0.0-beta1",
		"Microsoft.AspNet.Diagnostics": "1.0.0-beta3",
		"Microsoft.AspNet.Identity.EntityFramework": "3.0.0-beta3",
		"Microsoft.AspNet.Security.Cookies": "1.0.0-beta3",
		"Microsoft.AspNet.Server.IIS": "1.0.0-beta3",
		"Microsoft.AspNet.Server.WebListener": "1.0.0-beta3",
		"Microsoft.AspNet.StaticFiles": "1.0.0-beta3",
		"Microsoft.Framework.ConfigurationModel.Json": "1.0.0-beta3",
		"Microsoft.Framework.CodeGenerators.Mvc": "1.0.0-beta3",
		"Microsoft.Framework.Logging": "1.0.0-beta3",
		"Microsoft.Framework.Logging.Console": "1.0.0-beta3",
		"Microsoft.VisualStudio.Web.BrowserLink.Loader": "14.0.0-beta3",
		"Microsoft.AspNet.SignalR.Server": "3.0.0-beta3",
		"Microsoft.AspNet.WebSockets.Server": "1.0.0.0-beta3",
		"Firefly": ""
	},
	"commands": {
		/* Change the port number when you are self hosting this application */
		"web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
		"gen": "Microsoft.Framework.CodeGeneration",
		"ef": "EntityFramework.Commands",
		"kestrel": "Microsoft.AspNet.Hosting --server Kestrel --server.urls http://localhost:5001",
		"fastcgi": "Microsoft.AspNet.Hosting --server ChatLe --fastcgi.port 9000 --fastcgi.maxConnections 655535 --fastcgi.maxRequests 65535 --fastcgi.supportMultiplexing true",
		"firefly": "Microsoft.AspNet.Hosting --server Firefly --server.urls http://localhost:5002"
	},
	"frameworks": {
		"aspnet50": {
		} /*,
        "aspnetcore50": { }*/
	},
	"exclude": [
		"wwwroot",
		"node_modules",
		"bower_components"
	],
	"packExclude": [
		"node_modules",
		"bower_components",
		"**.kproj",
		"**.user",
		"**.vspscc"
	],
	"scripts": {
		"postrestore": "npm install",
		"prepare": "grunt bower:install"
	}
}
